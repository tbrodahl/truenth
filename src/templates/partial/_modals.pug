.modal.fade#modal-register
  .modal-dialog(role='document')
    .modal-content.box-modal
      .box-modal__inner
        a.box-modal__close(type='button', data-dismiss='modal', aria-label='Close')
        h3.box-modal__title Join Us!
        p.box-modal__copy Itâ€™s going to take a group effort to improve the prostate cancer experience for future generations.
        span.box-modal__sub If You're A Patient
        a.button.button-large.button--teal Create Account
      .box-modal__footer
        span.box-modal__sub Want to Receive News?
        form(class='js-mock-submit')
