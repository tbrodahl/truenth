.modal.fade#modal-login
  .modal-dialog(role='document')
    .modal-content.box-modal.box-modal--login
      .box-modal__inner
        a.box-modal__close(type='button', data-dismiss='modal', aria-label='Close')
        h3.box-modal__title Login

        a.button.button--facebook.button-large.button--teal.button--has-svg
          +svg('Facebook-Icon', 15, 31)
          |Log in with Facebook
        a.button.button--google.button-large.button--teal.button--has-svg
          +svg('Google-Icon', 20, 31)
          |Log in with Google
        .box-modal__divider
        form
          input(type="text", placeholder="Email Address")
          input(type="text", placeholder="Password")
          a.button.button-large.button--teal(type="submit") Log In
